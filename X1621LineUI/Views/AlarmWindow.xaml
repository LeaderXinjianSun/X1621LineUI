<metro:MetroWindow x:Class="X1621LineUI.Views.AlarmWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:metro="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:X1621LineUI.Views"
        mc:Ignorable="d"
        Title="Alarm" Icon="error.ico" Height="400" Width="533" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Closed">
            <i:InvokeCommandAction Command="{Binding AlarmWindowClosedCommand}" />
        </i:EventTrigger>
    </i:Interaction.Triggers>
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="蝙蝠侠.jpg"></ImageBrush>
        </Grid.Background>
        <TextBlock Text="{Binding WindowAlarmString}" FontWeight="Bold" Foreground="Red" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="60"></TextBlock>
    </Grid>
</metro:MetroWindow>
